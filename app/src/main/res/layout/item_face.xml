<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="2dp"
    android:layout_marginRight="2dp"
    android:layout_marginTop="20dp"
    android:padding="0dp"
    app:cardCornerRadius="0dp"
    app:cardBackgroundColor="@color/cardview_light_background"
    app:cardElevation="10dp"
    tools:cardBackgroundColor="@drawable/gradient5">


    <RelativeLayout
        android:id="@+id/l1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="0dp">

        <ImageView
            android:id="@+id/face_thumbnail"
            android:layout_width="80dp"
            android:layout_height="105dp"
            android:layout_alignParentStart="true"
            android:src="@drawable/cap1" />

        <RelativeLayout
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/face_thumbnail"
            android:background="#94fcf7">

            <TextView
                android:id="@+id/pos"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:fontFamily="@font/aclonica"
                android:text="3"
                android:textAlignment="center"
                android:textSize="30sp"
                android:textStyle="bold" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/rl"
            android:layout_toRightOf="@+id/face_thumbnail"
            android:padding="5dp">

            <TextView
                android:id="@+id/age"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/aclonica"
                android:text="Age: 25.9"
                android:textColor="@color/colorPrimary"
                android:textSize="23sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/gender"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="3dp"
                android:layout_toRightOf="@+id/age"
                android:fontFamily="@font/aclonica"
                android:text="Female"
                android:textColor="#7f2e2e"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/hair"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/age"
                android:fontFamily="@font/aclonica"
                android:text="Hair: Brown"
                android:textColor="@color/colorPrimary"
                android:textSize="15sp"
                android:textStyle="bold" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/hair"
                android:id="@+id/linlayout"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/facial_hair"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight=".5"
                    android:fontFamily="@font/aclonica"
                    android:text="Mouchtach: 30%\nBeard: 40%\nSideBurns: 10%"
                    android:textColor="#5c1c5c"
                    android:textSize="12dp"
                    android:textStyle="bold"/>

                <LinearLayout
                    android:layout_width="2dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="2dp"
                    android:layout_marginRight="5dp"
                    android:background="@color/colorAccent">
                </LinearLayout>

                <TextView
                    android:id="@+id/emotion"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight=".5"
                    android:fontFamily="@font/aclonica"
                    android:text="Smile: 10%\nHappy: 20%\nAngry: 30%"
                    android:textColor="#323753"
                    android:textSize="12sp"
                    android:textStyle="bold" />

            </LinearLayout>

            <TextView
                android:id="@+id/glasses"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/linlayout"
                android:fontFamily="@font/aclonica"
                android:text="Glasses: Reading Glass"
                android:textColor="@color/colorAccent"
                android:textSize="12sp"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/accessories"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/glasses"
                android:fontFamily="@font/aclonica"
                android:text="Accessories: Glasses,Watch"
                android:textColor="@color/colorAccent"
                android:textSize="10sp"

                android:textStyle="bold" />



        </RelativeLayout>


    </RelativeLayout>


</android.support.v7.widget.CardView>